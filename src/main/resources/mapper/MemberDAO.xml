<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baggujo.dao.MemberDAO">
    <select id="findMemberByEmail" resultType="com.baggujo.dto.MemberDTO">
        <![CDATA[
            select * from member where email = #{email}
        ]]>
    </select>

    <!-- 회원가입시 중복 이메일 조회 -->
    <select id="getEmailDuplicated" resultType="boolean">
        select case when count(*) > 0 then 1 else 0 end
        from member
        where email = #{email}
    </select>

</mapper>