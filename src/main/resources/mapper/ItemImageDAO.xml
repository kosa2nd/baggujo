        <![CDATA[
            insert into item_image(name, s_name, img_no, item_id)
            values
            <foreach item="item" collection="list" open="INSERT ALL"  close="SELECT * FROM DUAL" separator=" " >
                (#{item.name}, #{item.sName}, #{item.imgNo}, #{item.itemId})
            </foreach>
        ]]>
